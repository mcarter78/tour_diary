<h2>Add a Show:</h2>
<div id="add-show">
  <form class="form-group" ng-submit="addShow()">
    <div><input autofocus class="form-control" type="text" ng-model="newShow.date" placeholder="Date / Time"></div>
    <div><input class="form-control" type="text" ng-model="newShow.price" placeholder="Price"></div>
    <div><input class="form-control" type="text" ng-model="newShow.address" placeholder="Venue - City, State"></div>
    <div><textarea class="form-control" ng-model="newShow.details" placeholder="Show Details"></textarea></div>
    <div><button class="btn" id="add-show-btn" type="submit">Add Show</button></div>
  </form>
</div>
<div id="show-list" ng-init="getAll()">
  <div ng-repeat="show in allShows">
    <div id="show" class="form-group" ng-hide="editorEnabled">
      <p><strong>{{ show.date | date }}</strong> - {{ show.price | currency }}</p>
      <p>{{ show.address }}</p>
      <p>{{ show.details }}</p>
      <p>Comments ({{ show.comments.length }})</p>
      <button class="btn" ng-click="enableEditor()">Edit Show</button>
      <button class="btn" ng-click="deleteShow(show)">Delete Show</button>
    </div>

    <div ng-show="editorEnabled">
      <form class="edit-form" ng-submit="editShow(show)">
        <div><input class="form-control" type="text" ng-model="editableDate" placeholder="{{ show.date | date }}"></div>
        <div><input class="form-control" type="text" ng-model="editablePrice" placeholder="{{ show.price | currency }}"></div>
        <div><input class="form-control" type="text" ng-model="editableAddress" placeholder="{{ show.address }}"></div>
        <div><textarea class="form-control" ng-model="editableDetails" ng-show="editorEnabled" placeholder="{{ show.details }}"></textarea></div>
        <div><button class="btn" type="submit" ng-click="save()">Save</button><button class="btn" ng-click="disableEditor()">Cancel</button><div>
      </form>
    </div>
  </div>
</div>
