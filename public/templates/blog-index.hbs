<h2>How's The Tour Going?</h2>
<div id="add-post">
  <form class="form-group" ng-submit="addPost()">
    <div><input autofocus class="form-control" type="text" ng-model="newPost.bandMember" placeholder="Band Member Name"></div>
    <div><textarea class="form-control" ng-model="newPost.content" placeholder="Notes from the Road..."></textarea></div>
    <div><button id="add-post-btn" class="btn" type="submit">Add Post</button></div>
  </form>
</div>
<div id="post-list" ng-init="getAll()">
  <div ng-repeat="post in allBlogPosts">
    <div id="post" ng-hide="editorEnabled">
      <p><strong>{{ post.bandMember }}</strong> - {{ post.date | date }}</p>
      <p>{{ post.content }}</p>
      <p><a ng-href="/blog/{{ post._id }}">Comments ({{ post.comments.length }})</a></p>
      <button class="btn" ng-click="enableEditor()">Edit Post</button>
      <button class="btn" ng-click="deletePost(post)">Delete Post</button>
    </div>

    <div class="edit-form" class="form-group" ng-show="editorEnabled">
      <p><strong>{{ post.bandMember }}</strong> - {{ post.date | date }}</p>
      <form class="form-group" ng-submit="editPost(post)">
        <div><textarea class="form-control" ng-model="editableContent" ng-show="editorEnabled" placeholder="{{ post.content }}"></textarea></div>
        <div><button class="btn" type="submit" ng-click="save()">Save</button><button class="btn" ng-click="disableEditor()">Cancel</button><div>
      </form>
    </div>
  </div>
</div>
