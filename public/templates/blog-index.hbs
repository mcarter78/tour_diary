<div id="add-post">
  <form ng-submit="addPost()">
    <div>
      <input type="text" ng-model="newPost.bandMember" placeholder="Name">
    </div>
    <div>
      <textarea ng-model="newPost.content"></textarea>
    </div>
    <div>
      <button type="submit">Add Post</button>
    </div>
  </form>
</div>
<div id="post-list">
  <div ng-repeat="post in allBlogPosts">
    <h4>{{ post.bandMember }} - {{ post.date | date }}</h4>
    <p>{{ post.content}}</p>
  </div>
</div>
